    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Streamlit",
            "type": "python",
            "request": "launch",
            //"program": "python",
            "module": "streamlit",
            "console": "integratedTerminal",
            "args": ["run", "${file}", "--server.port", "8080"]
        }

    ]
}